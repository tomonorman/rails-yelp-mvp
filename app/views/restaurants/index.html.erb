<div class="container">
  <h1>Restaurants</h1>
  <%= link_to "Add a restaurant", new_restaurant_path %>
  <div class="row">
    <% @restaurants.each do |restaurant|  %>
      <div class="col-4">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name  %></h5>
            <h6 class="card-subtitle mb-2 text-muted"> <%= restaurant.category.capitalize %></h6>
            <p class="card-text"><%= restaurant.phone_number %></p>
            <%= link_to "Details", restaurant_path(restaurant) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
