<div class="container">
  <h1><%= @restaurant.name %></h1>
  <h4><%= @restaurant.category.capitalize %></h4>
  <p><%= @restaurant.address %></p>
  <p>Book now! <%= @restaurant.phone_number %></p>
  <hr>
  <h3>Reviews</h3>
  <hr>
  <% @restaurant.reviews.each do |review| %>
    <div class="d-flex justify-content-between">
      <p class="mt-3"><%= review.content %></p>
      <h5 class="mt-3"><% review.rating.times do %>
        <i class="fas fa-utensils"></i>
      <% end %></h5>
    </div>
    <hr>
  <% end %>
    <%= link_to restaurants_path do %>
      <h4><i class="fas fa-home"></i></h4>
    <% end %>

  <h3>Add a review for <%= @restaurant.name %></h3>
  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
